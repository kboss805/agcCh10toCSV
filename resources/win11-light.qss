/*
 * Windows 11 / WinUI 3 Light Theme for Qt
 *
 * Based on WinUI 3 light theme color tokens from generic.xaml.
 *
 * Color reference (pre-composited on #F3F3F3 base):
 *   Background:       #F3F3F3
 *   ControlFill:      #FBFBFB  (hover #F6F6F6, pressed #F0F0F0)
 *   ControlStroke:    #E5E5E5  (secondary #EBEBEB)
 *   CardBackground:   #FFFFFF
 *   Text:             #1B1B1B  (secondary 60%, disabled 36%)
 *   Accent:           #005FB8  (hover #0067C0, pressed #003D92)
 *   AccentText:       #FFFFFF
 */


/*-----QWidget-----*/
QWidget
{
    background-color: #F3F3F3;
    color: #1B1B1B;
    font-family: "Segoe UI Variable", "Segoe UI", sans-serif;
    font-size: 14px;
}


/*-----QLabel-----*/
QLabel
{
    background-color: transparent;
    color: #1B1B1B;
}


QLabel::disabled
{
    background-color: transparent;
    color: rgba(27, 27, 27, 0.36);
}


/*-----QMenuBar-----*/
QMenuBar
{
    background-color: #F3F3F3;
    color: #1B1B1B;
    border: none;
}


QMenuBar::item
{
    background-color: transparent;
    padding: 4px 8px;
}


QMenuBar::item:selected
{
    background-color: #F6F6F6;
    border-radius: 4px;
}


QMenuBar::item:pressed
{
    background-color: #F0F0F0;
    border-radius: 4px;
}


/*-----QMenu-----*/
QMenu
{
    background-color: #F9F9F9;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    color: #1B1B1B;
    padding: 4px 0px;
}


QMenu::separator
{
    height: 1px;
    background-color: #E5E5E5;
    margin: 4px 12px;
}


QMenu::item
{
    min-width: 150px;
    padding: 6px 16px;
}


QMenu::item:selected
{
    background-color: #F6F6F6;
}


QMenu::item:disabled
{
    color: rgba(27, 27, 27, 0.36);
}


/*-----QToolTip-----*/
QToolTip
{
    background-color: #F9F9F9;
    color: #1B1B1B;
    border: 1px solid #E5E5E5;
    border-radius: 4px;
    padding: 4px 8px;
}


/*-----QPushButton-----*/
QPushButton
{
    background-color: #FBFBFB;
    color: #1B1B1B;
    border: 1px solid #E5E5E5;
    border-radius: 4px;
    padding: 5px 12px;
}


QPushButton::hover
{
    background-color: #F6F6F6;
    border: 1px solid #EBEBEB;
}


QPushButton::pressed
{
    background-color: #F0F0F0;
    border: 1px solid #E5E5E5;
}


QPushButton::disabled
{
    background-color: #F5F5F5;
    color: rgba(27, 27, 27, 0.36);
    border: 1px solid #E5E5E5;
}


/*-----QPushButton (accent)-----*/
QPushButton#m_process_btn
{
    background-color: #005FB8;
    color: #FFFFFF;
    border: 1px solid #005FB8;
    border-radius: 4px;
    padding: 5px 12px;
    font-weight: 600;
}


QPushButton#m_process_btn:hover
{
    background-color: #0067C0;
    border: 1px solid #0067C0;
}


QPushButton#m_process_btn:pressed
{
    background-color: #003D92;
    border: 1px solid #003D92;
}


QPushButton#m_process_btn:disabled
{
    background-color: #F5F5F5;
    color: rgba(27, 27, 27, 0.36);
    border: 1px solid #E5E5E5;
}


/*-----QComboBox-----*/
QComboBox
{
    background-color: #FBFBFB;
    border: 1px solid #E5E5E5;
    border-radius: 4px;
    padding-left: 8px;
    color: #1B1B1B;
    height: 22px;
}


QComboBox::disabled
{
    background-color: #F5F5F5;
    color: rgba(27, 27, 27, 0.36);
    border: 1px solid #E5E5E5;
}


QComboBox:hover
{
    background-color: #F6F6F6;
    border: 1px solid #EBEBEB;
}


QComboBox:on
{
    background-color: #F0F0F0;
}


QComboBox QAbstractItemView
{
    background-color: #F9F9F9;
    color: #1B1B1B;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    selection-background-color: #F6F6F6;
    selection-color: #1B1B1B;
    outline: 0;
    padding: 4px 0px;
}


QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: none;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}


QComboBox::down-arrow
{
    width: 8px;
    height: 8px;
}


/*-----QLineEdit-----*/
QLineEdit
{
    background-color: #FBFBFB;
    color: #1B1B1B;
    border: 1px solid #E5E5E5;
    border-radius: 4px;
    padding: 4px 8px;
}


QLineEdit:hover
{
    border: 1px solid #EBEBEB;
}


QLineEdit:focus
{
    border: 1px solid #005FB8;
}


QLineEdit::disabled
{
    background-color: #F5F5F5;
    color: rgba(27, 27, 27, 0.36);
    border: 1px solid #E5E5E5;
}


/*-----QGroupBox-----*/
QGroupBox
{
    background-color: #FFFFFF;
    border: 1px solid #EBEBEB;
    border-radius: 8px;
    margin-top: 24px;
    padding-top: 8px;
}


QGroupBox::title
{
    background-color: transparent;
    color: #005FB8;
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 6px 12px;
    font-weight: 600;
}


QGroupBox::title::disabled
{
    color: rgba(27, 27, 27, 0.36);
}


/*-----QCheckBox-----*/
QCheckBox
{
    background-color: transparent;
    color: #1B1B1B;
    spacing: 8px;
}


QCheckBox::indicator
{
    background-color: #FBFBFB;
    border: 1px solid #8B8B8B;
    border-radius: 4px;
    width: 18px;
    height: 18px;
}


QCheckBox::indicator:checked
{
    background-color: #005FB8;
    border: 1px solid #005FB8;
    image: url(:/resources/checkmark.svg);
}


QCheckBox::indicator:unchecked:hover
{
    border: 1px solid #1B1B1B;
}


QCheckBox::indicator:checked:hover
{
    background-color: #0067C0;
    border: 1px solid #0067C0;
    image: url(:/resources/checkmark.svg);
}


QCheckBox:disabled
{
    color: rgba(27, 27, 27, 0.36);
}


QCheckBox::indicator:disabled
{
    background-color: #F5F5F5;
    border: 1px solid #D1D1D1;
}


/*-----QTreeWidget-----*/
QTreeWidget
{
    background-color: #FFFFFF;
    border: none;
    outline: 0;
    color: #1B1B1B;
}


QTreeWidget::item
{
    padding: 2px 0px;
}


QTreeWidget::item:hover
{
    background-color: #F6F6F6;
}


QTreeWidget::item:selected
{
    background-color: #FBFBFB;
}


QTreeWidget::branch
{
    background-color: transparent;
}


QTreeWidget::indicator
{
    background-color: #FBFBFB;
    border: 1px solid #8B8B8B;
    border-radius: 4px;
    width: 18px;
    height: 18px;
}


QTreeWidget::indicator:checked
{
    background-color: #005FB8;
    border: 1px solid #005FB8;
    image: url(:/resources/checkmark.svg);
}


QTreeWidget::indicator:indeterminate
{
    background-color: #005FB8;
    border: 1px solid #005FB8;
}


QTreeWidget::indicator:unchecked:hover
{
    border: 1px solid #1B1B1B;
}


QTreeWidget::indicator:checked:hover
{
    background-color: #0067C0;
    border: 1px solid #0067C0;
    image: url(:/resources/checkmark.svg);
}


QTreeWidget::indicator:disabled
{
    background-color: #F5F5F5;
    border: 1px solid #D1D1D1;
}


/*-----QTableView & QTableWidget-----*/
QTableView
{
    background-color: #F3F3F3;
    border: 1px solid #E5E5E5;
    color: #1B1B1B;
    gridline-color: #E5E5E5;
    outline: 0;
}


QTableView::disabled
{
    background-color: #F3F3F3;
    border: 1px solid #E5E5E5;
    color: rgba(27, 27, 27, 0.36);
    gridline-color: #E5E5E5;
    outline: 0;
}


QTableView::item:hover
{
    background-color: #F6F6F6;
    color: #1B1B1B;
}


QTableView::item:selected
{
    background-color: #FBFBFB;
    border: 1px solid #005FB8;
    color: #1B1B1B;
}


QTableView::item:selected:disabled
{
    background-color: #F5F5F5;
    border: 1px solid #E5E5E5;
    color: rgba(27, 27, 27, 0.36);
}


QTableCornerButton::section
{
    background-color: #FFFFFF;
    color: #1B1B1B;
}


QHeaderView::section
{
    background-color: #FFFFFF;
    color: #1B1B1B;
    text-align: left;
    padding: 4px 8px;
    border: none;
    border-bottom: 1px solid #E5E5E5;
}


QHeaderView::section:disabled
{
    background-color: #F5F5F5;
    color: rgba(27, 27, 27, 0.36);
}


QHeaderView::section:checked
{
    background-color: #F6F6F6;
    color: #1B1B1B;
}


/*-----QProgressBar-----*/
QProgressBar
{
    background-color: #E5E5E5;
    color: #1B1B1B;
    border: none;
    border-radius: 2px;
    text-align: center;
    min-height: 20px;
    max-height: 20px;
}


QProgressBar::chunk
{
    background-color: #005FB8;
    border-radius: 2px;
}


QProgressBar::chunk:disabled
{
    background-color: #D1D1D1;
}


/*-----QScrollBar (horizontal)-----*/
QScrollBar:horizontal
{
    background-color: transparent;
    height: 8px;
    margin: 0px;
    border: none;
}


QScrollBar::handle:horizontal
{
    background-color: #CDCDCD;
    min-width: 20px;
    border-radius: 4px;
}


QScrollBar::handle:horizontal:hover
{
    background-color: #A6A6A6;
}


QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal
{
    width: 0px;
    background: none;
    border: none;
}


QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
    background: none;
}


/*-----QScrollBar (vertical)-----*/
QScrollBar:vertical
{
    background-color: transparent;
    width: 8px;
    margin: 0px;
    border: none;
}


QScrollBar::handle:vertical
{
    background-color: #CDCDCD;
    min-height: 20px;
    border-radius: 4px;
}


QScrollBar::handle:vertical:hover
{
    background-color: #A6A6A6;
}


QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical
{
    height: 0px;
    background: none;
    border: none;
}


QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
    background: none;
}


/*-----QStatusBar-----*/
QStatusBar
{
    background-color: #F3F3F3;
    color: #1B1B1B;
    border: none;
}


/*-----QPlainTextEdit-----*/
QPlainTextEdit
{
    background-color: #FFFFFF;
    color: #1B1B1B;
    border: 1px solid #E5E5E5;
    border-radius: 4px;
    padding: 4px 8px;
    font-family: "Consolas", "Courier New", monospace;
    font-size: 9pt;
}


/*-----QToolBar-----*/
QToolBar
{
    background-color: #F3F3F3;
    border-bottom: 1px solid #E5E5E5;
    spacing: 4px;
    padding: 2px 4px;
}


QToolBar::separator
{
    width: 1px;
    background-color: #E5E5E5;
    margin: 4px 2px;
}


/*-----QDockWidget-----*/
QDockWidget
{
    color: #1B1B1B;
}


QDockWidget::title
{
    background-color: #FFFFFF;
    padding: 6px 8px;
    border-bottom: 1px solid #E5E5E5;
}


/*-----QDialogButtonBox & QDialog-----*/
QDialog
{
    background-color: #F3F3F3;
    border-radius: 8px;
}
